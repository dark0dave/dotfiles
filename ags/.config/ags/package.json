{
    "name": "ags-dotfiles",
    "author": "Aylur",
    "kofi": "https://ko-fi.com/aylur",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/Aylur/dotfiles.git"
    },
    "scripts": {
        "lint": "eslint --fix .",
        "prepare": "rm -rf build && mkdir -p build",
        "build:main": "esbuild --bundle ./main.ts --outfile=build/main.js --format=esm --external:resource://\\* --external:gi://\\*",
        "build:greeter": "esbuild --bundle ./greeter/greeter.ts --outfile=build/greeter.js --format=esm --external:resource://\\* --external:gi://\\*",
        "build:copy": "cp -r assets build && cp -r style build && cp -r greeter build && cp -r widget build",
        "build": "npm run build:main && npm run build:greeter && npm run build:copy"
    },
    "devDependencies": {
        "@girs/accountsservice-1.0": "^1.0.0-3.2.7",
        "@girs/glib-2.0": "^2.82.2-4.0.0-beta.19",
        "@typescript-eslint/eslint-plugin": "^6.20.0",
        "esbuild": "^0.24.0",
        "eslint-config-standard-with-typescript": "^43.0.1",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-n": "^16.6.2",
        "eslint-plugin-promise": "^6.1.1",
        "eslint": "^8.56.0",
        "typescript": "^5.3.3"
    }
}
